{
  "name": "crox",
  "version": "2.0.0",
  "description": "Crox is a high performance cross-language template engine, written by the JavaScript.",
  "homepage": "http://thx.github.io/crox/",
  "keywords": [
    "front end",
    "template"
  ],
  "author": "shtml <shtml@live.com>",
  "contributors": [
    "shtml <shtml@live.com>",
    "lenel <lenel@outlook.com>",
    "wangjeaf <wangjeaf@gmail.com>",
    "jserme <dev.hubo@gmail.com>"
  ],
  "engines": {
    "node": ">= 0.8.17"
  },
  "dependencies": {
    "async": "2.6.0",
    "chokidar": "2.0.3",
    "commander": "2.15.1",
    "iconv-lite": "0.4.21",
    "js-beautify": "1.7.5",
    "semver": "5.5.0",
    "shelljs": "0.8.1"
  },
  "devDependencies": {
    "ali-contributors": "*",
    "app": "0.1.0",
    "async": "^2.6.0",
    "babel-eslint": "^8.2.2",
    "better-assert": "1.0.2",
    "grunt": "^1.0.2",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-uglify": "^3.3.0",
    "husky": "^0.14.3",
    "kissy": "5.0.2",
    "lint-staged": "^6.0.0",
    "mocha": "^5.0.5",
    "prepare-commit-msg-angular": "^0.2.0",
    "prettier": "^1.11.1",
    "requirejs": "2.3.5",
    "seajs": "3.0.2",
    "semver": "^5.5.0",
    "serve": "^6.5.4",
    "validate-commit-msg": "^2.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thx/crox"
  },
  "main": "./build/crox-all.js",
  "bin": {
    "crox": "./bin/crox.js"
  },
  "scripts": {
    "test": "mocha",
    "build": "grunt",
    "precommit": "lint-staged",
    "preparecommitmsg": "prepare-commit-msg-angular $2 $3",
    "commitmsg": "validate-commit-msg"
  },
  "preferGlobal": false,
  "lint-staged": {
    "src/**/*.js, !(head*|tail*), test/**/*.spec.js": [
      "prettier --write --single-quote --trailing-comma es5 --semi true",
      "git add"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "helpMessage": "\n\rCommit message格式校验出错！\n\r原因：Commit message的书写需要符合格式规则。\n\r格式要求，请参考：https://github.com/angular/angular.js/blob/master/CONTRIBUTING.md#-git-commit-guidelines"
    }
  }
}
